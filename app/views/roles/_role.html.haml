%div{:id => "#{dom_id role}"}
  %p.my-5
    %strong.block.font-medium.mb-1 Name:
    = role.name
  %p.my-5
    %strong.block.font-medium.mb-1 Description:
    = role.description
  %p.my-5
    %strong.block.font-medium.mb-1 Permission:
    = role.permissions&.compact.join(", ")
  - if action_name != "show" && current_user.id == role.user_id
    = link_to "Show this role", role, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
    = link_to "Edit this role", edit_role_path(role), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium"
    %hr.mt-6/
