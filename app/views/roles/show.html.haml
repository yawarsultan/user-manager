.mx-auto.w-full.flex{:class => "md:w-2/3"}
  .mx-auto
    - if notice.present?
      %p#notice.py-2.px-3.bg-green-50.mb-5.text-green-500.font-medium.rounded-lg.inline-block= notice
    = render @role
    - if @user_roles.include?('edit') 
      = link_to "Edit this role", edit_team_role_path(@role, team_id: current_team.id), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
    - if @user_roles.include?('delete')
      .inline-block.ml-2
        = button_to "Destroy this role", team_role_path(@role, team_id: current_team.id), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium"
    = link_to "Back to roles", team_roles_path(team_id: current_team.id), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
