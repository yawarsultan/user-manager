%section.bg-gray-50
  .flex.flex-col.items-center.justify-center.px-6.py-8.mx-auto.md:h-screen.lg:py-0
    .p-8.border.rounded
      %h1.text-center.mb-12.font-bold
        Creat Team
      = form_with model: @team, url: teams_path(team_id: current_team&.id), class: "w-full max-w-sm" do |f|
        = f.hidden_field :user_id, value: current_user.id
        .md:flex.md:items-center.mb-6
          %div{class: "md:w-1/3"}
            %label.block.text-gray-500.font-bold.md:text-right.mb-1.md:mb-0.pr-4{for: "inline-full-name"}
              Name
          %div{class: "md:w-2/3"}
            = f.text_field :name, required: true, class: 'inline-full-name bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500'
        .md:flex.md:items-center.mb-6
          %div{class: "md:w-1/3"}
            %label.block.text-gray-500.font-bold.md:text-right.mb-1.md:mb-0.pr-4{for: "inline-password"}
              Description
          %div{class: "md:w-2/3"}
            = f.text_area :description, required: true, class: 'inline-full-name bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500'
        .md:flex.md:items-center
          %div{class: "md:w-1/3"}
          %div{class: "md:w-2/3"}
            = f.submit "Submit", class: "shadow bg-blue-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded"