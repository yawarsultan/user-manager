.mx-auto.w-full{:class => "md:w-2/3"}
  %h1.font-bold.text-4xl Manage roles
  = form_with(url: team_user_save_roles_path(current_team, current_user), class: "contents") do |form|
    = form.hidden_field :users_id, value: params[:user_id]
    .my-5
      = form.label :role_id
      = form.select "role_id[]", options_for_select(@roles&.map{|v| [v.name, v.id]}, selected: @user_roles&.pluck(:id)), multiple: true, id: "role_ids"
    .inline
      = form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer"
  = link_to "Back to users", team_users_path(current_team), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"