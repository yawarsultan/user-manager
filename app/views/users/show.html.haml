.mx-auto.w-full.flex{:class => "md:w-2/3"}
  .mx-auto
    - if notice.present?
      %p#notice.py-2.px-3.bg-green-50.mb-5.text-green-500.font-medium.rounded-lg.inline-block= notice
    = render @user
    - if current_team.check_owner(current_user.id) || current_user.id == @user.id || @user_roles.include?('edit')
      = link_to "Edit this user", edit_team_user_path(current_team, @user), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
    - if current_team.check_owner(current_user.id) || current_user.id == @user.id || @user_roles.include?('delete')
      .inline-block.ml-2
        = button_to "Destroy this user", team_user_path(current_team, @user), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium"
    = link_to "Back to users", team_users_path(current_team), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
